<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!-- 数据库驱动:选择你的本地硬盘上面的数据库驱动包 -->
    <classPathEntry  location="C:\Users\沙拉酱\.IntelliJIdea2019.3\config\jdbc-drivers\MySQL Connector\J 8\8.0.21\mysql-connector-java-8.0.21.jar"/>
    <!-- <classPathEntry  location="D:\maven-warehouse\repository\mysql\mysql-connector-java\8.0.17\mysql-connector-java-8.0.17.jar"/> -->
    <context id="Mysql"  targetRuntime="MyBatis3" defaultModelType="flat">
        <!--自动检查关键字，为关键字添加反引号-->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <!--覆盖生成xml文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>
        <!-- 实体类重写toString() -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />



        <commentGenerator>
            <!-- 不生成注释 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 数据库连接驱动类,URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/train_number?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=GMT"
                        userId="train_number" password="number">
        </jdbcConnection>


        <!-- domain类的位置targetProject是相对pom.xml的路径 -->
        <javaModelGenerator targetPackage="com.jiawa.train.number.domain" targetProject="..\number\src\main\java"/>

        <!-- mapper xml位置 targetProject是相对pom.xml的路径 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="..\number\src\main\resources"/>

        <!--mapper类的位置 targetProject是相对pom.xml的路径 -->
        <javaClientGenerator targetPackage="com.jiawa.train.number.mapper"
                             targetProject="..\number\src\main\java"
                             type="XMLMAPPER" />

        <!-- 要生成的表：tableName - 数据库中的表名或视图名，domainObjectName - 实体类名 -->
        <table tableName="number" domainObjectName="Number"/>
    </context>
</generatorConfiguration>